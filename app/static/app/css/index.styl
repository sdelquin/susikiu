LOGIN_LINK_COLOR = #FFA610
LOGIN_LINK_HOVER_COLOR = #996600

body
    color: white
    background: none
    font-family: "Niconne"
    margin: 0

.title
    font-size: 65px

.leitmotiv
    font-size: 30px
    
.bgvideo-container
    position: relative
    height: 100vh
    overflow: hidden

.bgvideo
    position: absolute
    top: 0
    left: -100%
    width: 300%
    height: 100%
    z-index: 0

.fronttext-container
    display: table
    width: 100%
    height: 100%
    text-align: center
    position: absolute
    z-index: 2
    color: white

.fronttext
    display: table-cell
    vertical-align: middle
    padding-bottom: 20vh

.leitmotiv
    margin-top: 20px
    font-size: 40px

.enter-link
    margin-top: 20px
    font-size: 30px
    font-weight: bold
    a
        transition color 0.5s
        color: LOGIN_LINK_COLOR
        &:hover
            text-decoration: none
            color: LOGIN_LINK_HOVER_COLOR

@media screen and (min-aspect-ratio: 16/9)
  .bgvideo
      top: -100%
      left: 0
      width: 100%
      height: 300%

.metrics
    font-family: "Fjalla One", serif
    font-size: 40px
    margin-top: 100px
    color: rgba(255, 255, 255, 0.3)
